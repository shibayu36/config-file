{
  // 基本設定
  "window.title": "${dirty}${activeEditorLong}${separator}${rootName}",
  "editor.minimap.enabled": false, // minimap表示非表示
  "editor.folding": false, // foldingアイコンの表示非表示
  "editor.glyphMargin": false, // デバッガ領域の表示非表示
  "editor.lineNumbers": "off", // 行数表示
  "editor.wordWrap": "on", // 折り返し表示
  "files.insertFinalNewline": true, // 行末に改行自動入力
  "editor.renderControlCharacters": true, // 制御文字表示
  "workbench.activityBar.visible": false, // ActivityBarの表示非表示
  "workbench.editor.closeEmptyGroups": false,
  "breadcrumbs.enabled": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.enablePreview": false, // searchバーはパネルで表示
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editor.findMatchBorder": "#FDFF0C"
    }
  },
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true
  },
  "gopls": {
    "usePlaceholders": true
  },
  // open in external editor
  "alt-editor.name": "emacs",
  "alt-editor.binary": "~/bin/emacsclient",
  "alt-editor.args": "-n +{line}:{column} {filename}",
  "vsicons.dontShowNewVersionMessage": true,
  "editor.multiCursorModifier": "alt",
  "bracketPairColorizer.excludedLanguages": [],
  "workbench.list.keyboardNavigation": "filter", // File Treeでのフィルタ
  "ego.power-tools": {},
  "ego.power-tools.user": {
    "commands": {
      // emacs.C-yの挙動を変え、選択範囲は消えるようにする
      "emacs.better-C-y": {
        "name": "emacs better C-y",
        "description": "emacs better C-y",
        "script": "emacs-better-c-y.js"
      }
    }
  },
  "sync.gist": "5d81a7339c28f9d0c6ad6b0345086a9c",
  "sync.autoUpload": true,
  "formattingToggle.affects": ["formatOnSave"],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "json.schemas": [
    {
      "fileMatch": ["renovate.json"],
      "url": "https://raw.githubusercontent.com/renovatebot/renovate/master/renovate-schema.json"
    },
    {
      "fileMatch": ["tslint.json"],
      "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tslint.json"
    }
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.packageManager": "yarn",
  "files.exclude": {
    "**/.next/**": true,
    "**/vendor/bundle/**": true
  },
  "eslint.migration.2_x": "off",
  "diffEditor.renderSideBySide": false,
  // 拡張子との関連付け
  "files.associations": {
    "Dockerfile.*": "dockerfile",
    "*.nginx.conf.*": "nginx"
  },
  "cSpell.userWords": [
    "Hatena",
    "checkstyle",
    "junit",
    "kakuyomu",
    "typecheck"
  ],
  "customizeUI.stylesheet": {
    ".quick-input-widget": "width: 1000px !important; left: calc(50% - 200px);"
  },
  "search.searchOnType": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "auto-close-tag.SublimeText3Mode": true,
  "search.exclude": {
    "**/tsconfig.build.tsbuildinfo": true
  },
  "tabnine.experimentalAutoImports": true,
  "files.watcherExclude": {
    "**/.ammonite": true,
    "**/.bloop": true,
    "**/.metals": true
  },
  "zentabs.maximumOpenedTabs": 30,
  "hediet.vscode-drawio.local-storage": "",
  "hediet.vscode-drawio.theme": "min",
  "prettier.requireConfig": true,
  "githubIssues.createIssueTriggers": [],
  "emacs-mcx.useMetaPrefixMacCmd": true,
  "python.languageServer": "Microsoft",
  "typescript.suggest.autoImports": false,
  "openjunk.junkDirectory": "/Users/yuki.shibazaki/Dropbox/development/junk",
  "openjunk.junkFilenameFormat": "YYYY-MM-DD-HHmmss",
  "emacs-mcx.cursorMoveOnFindWidget": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "go.toolsManagement.autoUpdate": true,
  "textlint.configPath": "~/.textlintrc",
  "window.titleBarStyle": "custom",
  "leetcode.defaultLanguage": "typescript",
  "leetcode.enableStatusBar": false,
  "leetcode.workspaceFolder": "/Users/yuki.shibazaki/development/src/github.com/shibayu36/leetcode",
  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.filePath": {
    "default": {
      "folder": "",
      "filename": "${id}.${kebab-case-name}.${ext}"
    }
  },
  "leetcode.hint.commentDescription": false,

  // 自分の中のZen即時切り替え
  "settings.cycle": [
    {
      "id": "zen",
      "values": [
        {
          "editor.folding": false,
          "editor.glyphMargin": false,
          "workbench.activityBar.visible": false
        },
        {
          "editor.folding": true,
          "editor.glyphMargin": true,
          "workbench.activityBar.visible": true
        }
      ]
    }
  ],

  // 言語ごとの設定
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[graphql]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "ruby.useLanguageServer": true,
  "ruby.useBundler": false,
  "ruby.format": "rubocop",
  "ruby.lint": {
    "rubocop": {
      "useBundler": false
    }
  },
  "[ruby]": {
    "editor.tabSize": 2
  },
  "[slim]": {
    "editor.tabSize": 2
  },
  "[haml]": {
    "editor.tabSize": 2
  },
  "ctags": {
    "executePath": "/Users/yuki.shibazaki/.anyenv/envs/rbenv/shims/ripper-tags",
    "options": "--tag-file=.tags --recursive --force --exclude=/assets/ --exclude=.bundle --exclude=.git/ --exclude=coverage/ --exclude=.arcanist-extensions/ --exclude=log/ --exclude=tmp/ --exclude=bin/",
    "fileName": ".tags"
  },
  "redhat.telemetry.enabled": false,
  "sync.quietSync": true,
  "solargraph.logLevel": "debug",
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "beautify.language": {
    "html": ["htm", "html", "erb"]
  }
}
