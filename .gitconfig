[include]
	path = .gitconfig.local
[user]
	name = shibayu36
	email = shibayu36@gmail.com
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[core]
	editor = /usr/local/bin/emacsclient --alternate-editor /usr/bin/vim
	excludesfile = /Users/shibayu36/.gitignore
[alias]
        st = status -sb
        di = diff
        dic = diff --cached
        pr = pull --rebase
        co = checkout
        ci = commit -v
        br = branch
        wd = diff --word-diff
        gr = grep -C 3
        logg = log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'
        loggr = log --graph --date-order --pretty=format:'%Cblue%h %Cgreen%ci %Cred%an %Cblue%m %Creset%s %Cred%d'
        stat = log --stat --summary
        bro  = browse
        see = browse
        br-recent = branch-recent

[push]
	default = current
[branch]
	autosetuprebase = always
[merge]
	ff = false
[rerere]
	enabled = 1
[submodule]
	cachedir = /Users/shibayu36/.cache/git-submodules
[pull]
	rebase = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[ghq]
	root = ~/development/src
	root = ~/development/go/src
[ghi]
	token = !security find-internet-password -a shibayu36 -s github.com -l 'ghi token' -w
[tig]
	main-view = id date author commit-title:graph=yes,refs=yes
	vertical-split = auto
	split-view-height = 80%
	split-view-width  = 66%
