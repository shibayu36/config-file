{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(*)",

      "Bash(rg:*)",
      "Bash(git grep:*)",

      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go mod tidy:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(xargs:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",

      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",

      "Bash(git ls-tree:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git log:*)",
      "Bash(git status:*)"

    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_dsa)",
      "Read(id_ed25519)"
    ]
  },
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "50000"
  }
}
