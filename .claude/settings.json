{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 876000,
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "50000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(*)",
      "Search(*)",
      "Bash(rg:*)",
      "Bash(git grep:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go mod tidy:*)",
      "Bash(go mod graph:*)",
      "Bash(go mod why:*)",
      "Bash(go list:*)",
      "Bash(go doc:*)",
      "Bash(go get:*)",
      "Bash(gopls references:*)",
      "Bash(npm outdated:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(xargs:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(echo:*)",
      "Bash(tree:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue view:*)",
      "Bash(gh search:*)",
      "Bash(gh run view:*)",
      "Bash(gh search:*)",
      "Bash(gh run list:*)",
      "Bash(git ls-tree:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(ln:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(sed:*)",
      "Bash(gsed:*)",
      "Bash(awk:*)",
      "Bash(jq:*)",
      "Bash(open:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:blog.shibayu36.org)",
      "mcp__serena__search_for_pattern",
      "mcp__serena__find_symbol",
      "mcp__serena__list_dir",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_referencing_symbols",
      "mcp__slack-explorer-mcp__search_messages",
      "mcp__slack-explorer-mcp__get_thread_replies",
      "mcp__slack-explorer-mcp__get_user_profiles",
      "mcp__slack-explorer-mcp__search_files",
      "mcp__slack-explorer-mcp__get_canvas_content"
    ],
    "ask": [
      "Bash(git reset:*)",
      "Bash(git rebase:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_dsa)",
      "Read(id_ed25519)"
    ],
    "additionalDirectories": [
      "~/obsidian"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify-end.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify-end.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754091010862
  }
}
